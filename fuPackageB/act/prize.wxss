page {
  width: 100%;
  height: 100%;
}

page .goods-list {
  padding: 20rpx 30rpx;
  width: 100%;
  height: 100%;
  clear: both;
  display: -webkit-flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
  box-sizing: border-box;
}

page .goods-list .goods-item {
  position: relative;
  float: left;
  width: 340rpx;
  min-height: 395rpx;
  background: white;
  margin-bottom: 20rpx;
}

page .goods-list .goods-item .checkbox {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 20rpx;
  top: 20rpx;
}

page .goods-list .goods-item:nth-child(odd) {
  margin-right: 10rpx;
}

page .goods-list .goods-item .goods-show {
  width: 100%;
  border: 1px solid #e5e5e5;
  height: 259rpx;
}

page .goods-list .goods-item .goods-show .goods-cover {
  width: 100%;
  height: 257rpx;
}

page .goods-list .goods-item .goods-detail {
  padding: 20rpx 10rpx;
}

page .goods-list .goods-item .goods-detail .title {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #212121;
}

page .goods-list .goods-item .goods-detail .desc {
  margin-top: 10rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #888888;
}

page .cu-load {
  height: 150rpx;
  width: 100%;
}

page .handler {
  position: fixed;
  width: 750rpx;
  height: 100rpx;
  background: #fff;
  left: 0;
  bottom: 0;
  border: 1px solid #e5e5e5;
  padding: 30rpx;
  box-sizing: border-box;
}

page .handler .checked {
  width: 30rpx;
  height: 30rpx;
  margin-right: 11rpx;
}

page .handler .sel {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #888888;
}

page .handler text {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #212121;
}

page .handler .count {
  color: #f56f68;
}

page .handler .submit {
  width: 100%;
  height: 70rpx;
  background: #f56f68;
  border-radius: 35px;
  font-size: 36rpx;
  color: #fff;
}

.iosJJ {
  margin: 10% 10% 75%;
}

.iosJJ .closeB {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  height: 1rpx;
  width: 30rpx;
}

.iosJJ .logo {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: -100rpx;
  position: relative;
  z-index: 9;
}

.iosJJ .logo image {
  border-radius: 50%;
  height: 212rpx;
  width: 212rpx;
  border: 10rpx solid #fff;
  background: white;
}

.iosJJ .bg {
  position: relative;
  padding-top: 100rpx;
  background: white;
  border-radius: 15rpx;
}

.iosJJ .title {
  padding: 15rpx 0 30rpx;
  text-align: center;
  font-size: 38rpx;
  color: #333;
}

.iosJJ .child {
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  background: #eeeeee;
  border-radius: 6rpx;
  margin: 0 54rpx 30rpx;
}

.iosJJ .child input {
  display: flex;
  align-items: center;
  border-radius: 30rpx;
  font-size: 30rpx;
  padding: 0 20rpx;
  height: 60rpx;
  box-sizing: border-box;
  flex: 1;
  margin-left: 10rpx;
  border: 1px solid #f0f0f0;
}

.iosJJ .btn {
  display: flex;
  align-items: center;
  padding: 0 54rpx 20rpx;
  box-sizing: border-box;
  width: 100%;
}

.iosJJ .btn .van-button {
  font-size: 42rpx;
  background: #F56F68;
  color: white;
  border: none;
  border-radius: 14rpx;
  width: 100%;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
}

.van-popup {
  background: none !important;
}
