<!-- 申请资料-__技师 -->
<view id='informationToApplyForTechnician'>
  <view class='ITAFT-top-box'>

    <view class='ITAFT-top-center-box'>
      <view class='ITAFT-top-left'>
        <image src='/images/role_icon_02.png'></image>
      </view>
      <view class='ITAFT-top-center'>
        <view class='ITAFT-top-title'>技师</view>
        <view class='ITAFT-top-describe'>描述的文字大小</view>
      </view>
      <view class='ITAFT-top-right'>已选择</view>
    </view>

    <!-- ITAF-top-box -->
  </view>

  <view class='ITAFT-center-box'>
    <view class='ITAFT-center-title'>个人简介</view>
    <view class='ITAFT-center-content'>
      <textarea style="width:100%;height:100%;" placeholder='输入你的申请理由'>

      </textarea>
    </view>
    <!-- 只是顶起上个view -->
    <view class='ITAFT-center-bottom'></view>
    <!-- ITAFT-center-box -->
  </view>

  <view class='ITAFT-bottom-box'>
    <view class='ITFAT-bottom-title'>作品案例</view>
    <view class='ITFAT-bottom-img-box'>
      <view class='ITFAT-bottom-img-box2' wx:for="{{imgUrl}}" wx:key="{{index}}" wx:if="{{item.url}}">
        <image src='{{item.url ? item.url : ""}}' class='ITFAT-bottom-img'></image>
      </view>
      <view class='ITFAT-bottom-img-add-btn'>
        <image src='/images/add_2.png'></image>
      </view>
    </view>
    <view class='ITFAT-bottom-bottom'></view>
    <!-- ITAFT-bottom-box -->
  </view>

  <view class='ITFAT-bottom-submit'>提交</view>


  <!-- informationToApplyForTechnician -->
</view>